#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ”¨ Running build check before pushing..."

# Save the current state of the working directory
if git diff --quiet; then
  STASH_NEEDED=false
else
  STASH_NEEDED=true
  echo "ğŸ“¦ Stashing changes before build check..."
  git stash push -m "pre-push-build-check" --include-untracked
fi

# Run the build process
echo "ğŸ—ï¸  Running build process..."
npm run build
BUILD_EXIT_CODE=$?

# Restore the stashed changes if we stashed them
if [ "$STASH_NEEDED" = true ]; then
  echo "ğŸ“¦ Restoring stashed changes..."
  git stash pop
fi

# If the build failed, prevent the push
if [ $BUILD_EXIT_CODE -ne 0 ]; then
  echo "âŒ Build failed! Fix the build errors before pushing."
  exit 1
fi

echo "âœ… Build successful! Proceeding with push..."
exit 0
